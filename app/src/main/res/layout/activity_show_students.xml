<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rbshowallnew"
    tools:context=".ShowStudents">

  <Button
      android:id="@+id/daisyShowBtn"
      android:layout_width="137dp"
      android:layout_height="140dp"
      android:layout_marginTop="56dp"
      android:background="@drawable/daisy"
      android:onClick="loadListDaisyView"
      android:tooltipText="Display Daisy Class List"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.058"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <Button
      android:id="@+id/tulipShowBtn"
      android:layout_width="137dp"
      android:layout_height="140dp"
      android:layout_marginTop="56dp"
      android:background="@drawable/tulip"
      android:tooltipText="Display Tulip Class List"
      android:onClick="loadListTulipView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.867"
      app:layout_constraintStart_toEndOf="@+id/daisyShowBtn"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <Button
      android:id="@+id/showFullClass"
      android:layout_width="137dp"
      android:layout_height="140dp"
      android:layout_marginTop="228dp"
      android:background="@drawable/allkids"
      android:onClick="loadListView"
      android:tooltipText="Display Full Creche List"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <Button
      android:id="@+id/showBackButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:onClick="showBack"
      android:text="Back"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.04"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <TextView
      android:id="@+id/txtDaisy"
      android:layout_width="125dp"
      android:layout_height="32dp"
      android:layout_marginTop="24dp"
      android:fontFamily="@font/kidofont"
      android:gravity="center_horizontal"
      android:text="Display Daisy Class"
      android:textColor="@color/colorPrimaryDark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.089"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <TextView
      android:id="@+id/txtAll"
      android:layout_width="125dp"
      android:layout_height="32dp"
      android:layout_marginTop="368dp"
      android:fontFamily="@font/kidofont"
      android:gravity="center_horizontal"
      android:text="Display All Kids"
      android:textColor="@color/colorPrimaryDark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <TextView
      android:id="@+id/txtTulip"
      android:layout_width="125dp"
      android:layout_height="32dp"
      android:layout_marginTop="24dp"
      android:fontFamily="@font/kidofont"
      android:gravity="center_horizontal"
      android:text="Display Tulip Class"
      android:textColor="@color/colorPrimaryDark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.902"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

</androidx.constraintlayout.widget.ConstraintLayout>