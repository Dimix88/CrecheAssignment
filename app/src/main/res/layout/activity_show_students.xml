<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rbshowallnew"
    tools:context=".ShowStudents">

  <Button
      android:id="@+id/daisyShowBtn"
      android:layout_width="137dp"
      android:layout_height="140dp"
      android:layout_marginTop="56dp"
      android:background="@drawable/daisy"
      android:onClick="showDaisy"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.058"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <Button
      android:id="@+id/tulipShowBtn"
      android:layout_width="137dp"
      android:layout_height="140dp"
      android:layout_marginTop="56dp"
      android:background="@drawable/tulip"
      android:onClick="showTulip"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.867"
      app:layout_constraintStart_toEndOf="@+id/daisyShowBtn"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <Button
      android:id="@+id/showFullClass"
      android:layout_width="137dp"
      android:layout_height="140dp"
      android:layout_marginTop="288dp"
      android:background="@drawable/allkids"
      android:onClick="showAll"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

  <Button
      android:id="@+id/showBackButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:onClick="showBack"
      android:text="Back"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.04"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>